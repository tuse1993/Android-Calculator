<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anupam.calculator.MainActivity"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="30dp"
            android:textColor="#d10808"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="1"
            android:textSize="40dp"
            />
        <Button
            android:id="@+id/b2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="2"
            android:textSize="40dp"
            />
        <Button
            android:id="@+id/b3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="3"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/bplus"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="+"
            android:textSize="40dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b4"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="4"
            android:textSize="40dp"
            />
        <Button
            android:id="@+id/b5"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="5"
            android:textSize="40dp"
            />
        <Button
            android:id="@+id/b6"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="6"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/bminus"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="-"
            android:textSize="40dp"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b7"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="7"
            android:textSize="40dp"
            />
        <Button
            android:id="@+id/b8"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="8"
            android:textSize="40dp"
            />
        <Button
            android:id="@+id/b9"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="9"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/bmul"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="*"
            android:textSize="40dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b0"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="0"
            android:textSize="40dp"
            />
        <Button
            android:id="@+id/bpoint"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="."
            android:textSize="40dp"
            />
        <Button
            android:id="@+id/bequal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="="
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/bdiv"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="/"
            android:textSize="40dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bac"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="AC"
            android:textSize="35dp"
            />

    </LinearLayout>




</LinearLayout>
